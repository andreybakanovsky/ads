%h5 Our offers!
.card
  .card-body
    .container
      .row
        #carouselExampleDark.carousel.carousel-dark.slide{"data-bs-ride" => "carousel"}
          .carousel-inner
            - @items.each_with_index do |item, index|
              %div{:class => "carousel-item #{index == 0 ? " active" : ''}", "data-bs-interval" => "4000"}
                .row
                  .col
                    .card{:style => "width: 18rem;"}
                      - i = ads_index_with_attached
                      = image_tag @items[i].images[0].variant(resize_to_limit: [200, 200])
                      .card-body
                        %h5.card-title Name
                        %p.card-text 
                          = @items[i].content
