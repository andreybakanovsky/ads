            %button.carousel-control-prev{"data-bs-slide" => "prev", "data-bs-target" => "#carouselExampleDark", :type => "button"}
              %span.carousel-control-prev-icon{"aria-hidden" => "true"}
              %span.visually-hidden Previous
            %button.carousel-control-next{"data-bs-slide" => "next", "data-bs-target" => "#carouselExampleDark", :type => "button"}
              %span.carousel-control-next-icon{"aria-hidden" => "true"}
              %span.visually-hidden Next
%br/
- @items.each do |item|
  .card
    .card-body
      .container
        .row 
          .col
            - if item.images.attached?
              = image_tag item.images[rand(0..(item.images.count-1))].variant(resize_to_limit: [200, 200]) 
          .col
            = item.content
